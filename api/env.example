# =================================================================
# DRIVER CRUD DISTANCE CALCULATION SYSTEM - API CONFIGURATION
# =================================================================
# Copy this file to .env and fill in your actual values
# Never commit the actual .env file to version control

# =================================================================
# APPLICATION SETTINGS
# =================================================================
APP_ENV=development
APP_DEBUG=true
APP_URL=https://your-domain.com
APP_TIMEZONE=UTC

# =================================================================
# DATABASE CONFIGURATION
# =================================================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=driver_crud_distance_calculation_system
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_CHARSET=utf8mb4

# =================================================================
# JWT AUTHENTICATION
# =================================================================
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random
JWT_EXPIRY=604800

# =================================================================
# SUPABASE CONFIGURATION
# =================================================================
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_JWT_SECRET=your_supabase_jwt_secret_here

# =================================================================
# CORS SETTINGS
# =================================================================
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://your-domain.com

# =================================================================
# EXTERNAL API KEYS
# =================================================================
MAPBOX_API_KEY=your_mapbox_api_key_here
# GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# =================================================================
# LOGGING CONFIGURATION
# =================================================================
LOG_LEVEL=warning
LOG_PATH=logs/app.log
LOG_MAX_FILES=7

# =================================================================
# SECURITY SETTINGS
# =================================================================
SESSION_SECRET=your_session_secret_here
PASSWORD_MIN_LENGTH=6
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_DURATION=900

# =================================================================
# CACHE SETTINGS
# =================================================================
CACHE_DRIVER=file
CACHE_TTL=3600
DISTANCE_CACHE_TTL=86400

# =================================================================
# DEVELOPMENT SETTINGS
# =================================================================
# Set to false in production
DISPLAY_ERRORS=true
LOG_QUERIES=false