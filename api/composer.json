{
    "name": "connex/api",
    "description": "Backend API for Connex2 project.",
    "type": "project",
    "require": {
        "php": ">=7.4",
        "vlucas/phpdotenv": "^5.5",
        "guzzlehttp/guzzle": "^7.8",
        "firebase/php-jwt": "^6.10",
        "monolog/monolog": "^2.9"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "config": {
        "optimize-autoloader": true
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "phpmd/phpmd": "^2.15",
        "sebastian/phpcpd": "^6.0",
        "pdepend/pdepend": "^2.16",
        "phpstan/phpstan": "^2.1"
    }
}
